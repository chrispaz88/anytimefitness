            </div>
    </div>

    {{#each platillosGrupos}}
    <div class="items">
      <div class="row">
        {{#each this}}
          <div class="chicken">
            <img src="{{this.foto}}" alt="{{this.nombre}}" style="width: 100%;">
            <a href="#" target="blank">{{this.nombre}}</a>
            <h2>{{this.precio}} $</h2>

            <div class="botones">
            <button class="modificar-btn" onclick="modificarPlatillo('{{this.id}}','{{this.foto}}')">Modificar</button>
            <button class="eliminar-btn" onclick="eliminarPlatillo('{{this.id}}')">Eliminar</button>
          </div>

          </div>
        {{/each}}
      </div>
    </div>
  {{/each}}
    
